{
  "name": "asking-for-a-friend",
  "version": "0.0.1",
  "description": "Helping our community ask questions without fear of being judged",
  "scripts": {
    "dev": "npm-run-all -l build -p build:watch start:watch",
    "start": "node dist/index.js",
    "start:watch": "nodemon -w dist -w .env -e js dist/index.js",
    "build": "tsc -p src/ --pretty",
    "build:watch": "npm run build -- -w --preserveWatchOutput",
    "test": "jest",
    "test:coverage": "npm run test -- --coverage",
    "lint": "eslint \"src/**/*.ts\" --max-warnings 0",
    "lint:fix": "npm run lint -- --fix",
    "lint:staged": "lint-staged",
    "prettier": "prettier -l \"src/**/*.ts\"",
    "prettier:fix": "npm run prettier -- --write"
  },
  "authors": [
    "Spencer Kaiser <spencer.kaiser@aa.com>"
  ],
  "engines": {
    "node": ">=12.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s build lint:staged test:coverage"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "npm run prettier:fix",
      "npm run lint:fix"
    ]
  },
  "nodemonConfig": {
    "delay": "400"
  },
  "dependencies": {
    "@americanairlines/simple-env": "^1.0.2",
    "@slack/bolt": "^3.2.0",
    "@slack/types": "^2.0.0",
    "@slack/web-api": "^6.0.0",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.25",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.1",
    "typescript": "^4.1.5"
  }
}
